@{
    Layout = null;
}
<div class="box-header box-header-me with-border">

    <h3 class="box-title"><i class="fa fa-plus" ng-dblclick="viewName = 'index'"></i> 添加</h3>

    <div class="box-tools pull-left">
        <button type="button" class="btn btn-box-tool" ng-click="viewName = 'index'"><i class="fa fa-times"></i></button>
    </div>
    <!-- /.box-tools -->
</div>
<!-- /.box-header -->
<div class="box-body">
    <div class="callout callout-danger" ng-show="addError!=''">
        <p>
            <b>添加失败：</b>{{addError}}
        </p>
    </div>
    <div class="form-group">
        <label>读取远程内容</label>
        <div class="input-group">
            <input class="form-control" type="text" ng-model="spider.targetUrl">
            <span class="input-group-btn">
                <button type="button" class="btn btn-info btn-flat" ng-click="spider.getContent()">读取填充</button>
            </span>
        </div>
    </div>
    <div class="form-group">
        <label>标题</label>
        <input class="form-control" ng-model="newModel.title" type="text" />
    </div>
    <div class="form-group">
        <label>副标题</label>
        <input class="form-control" ng-model="newModel.subTitle" type="text" />
    </div>
    <div class="form-group">
        <label>摘要</label>
        <input class="form-control" ng-model="newModel.summary" type="text" />
    </div>
    <div class="form-group">
        <label>是否推荐</label>
        <div class="form-control">
            <input ng-model="newModel.isRecommend" type="checkbox" />推荐
        </div>
    </div>
    <div class="form-group">
        <label>内容</label>
        <textarea class="form-control" ng-model="newModel.content"></textarea>
    </div>
    <div class="form-group">
        <label>状态</label>
        <select class="form-control" ng-model="newModel.status" ng-options="status.value as status.name for status in articleStatusList"></select>
    </div>
</div>
<div class="box-footer">
    <button class="btn btn-primary" ng-click="add()">确定添加</button>
</div>
<!-- /.box-body -->