@{
    Layout = null;
}
<div class="box-header box-header-me with-border">

    <h3 class="box-title"><i class="fa fa-edit" ng-dblclick="viewName = 'index'"></i>{{shopCallingQueueSet.currentShop.name}} 号数：{{shopCallingQueueSet.current.queueNumber}} 详细</h3>

    <div class="box-tools pull-left">
        <button type="button" class="btn btn-box-tool" ng-click="viewName = 'index'"><i class="fa fa-times"></i></button>
    </div>
    <!-- /.box-tools -->
</div>
<!-- /.box-header -->
<div class="box-body">
    <div class="callout callout-danger" ng-show="updateError!=''">
        <p>
            <b>更新失败：</b>{{updateError}}
        </p>
    </div>
    <div class="form-group">
        <label>号数</label>
        <div class="form-control">{{shopCallingQueueSet.current.queueNumber}}</div>
    </div>
    <div class="form-group">
        <label>排队</label>
        <div class="form-control">{{shopCallingQueueSet.current.queueIndex}}</div>
    </div>
    <div class="form-group">
        <label>人数</label>
        <div class="form-control">{{shopCallingQueueSet.current.title}}</div>
    </div>
    <div class="form-group">
        <label>时间</label>
        <div class="form-control">{{shopCallingQueueSet.current.addTime}}</div>
    </div>
    <div class="form-group">
        <label>备注</label>
        <div class="form-control">{{shopCallingQueueSet.current.remark}}</div>
    </div>
    <div class="form-group">
        <label>状态</label>
        <select class="form-control" ng-model="shopCallingQueueSet.current.status" ng-options="item.value as item.name  for item in statusList"></select>
    </div>
    <div class="form-group">
        <label>确认失败说明</label>
        <input class="form-control" ng-model="shopCallingQueueSet.current.refuseReason" type="text" />
    </div>
</div>
<div class="box-footer">
    <button class="btn btn-primary" ng-click="shopCallingQueueSet.setStatus()">确定保存</button>
</div>
<!-- /.box-body -->
