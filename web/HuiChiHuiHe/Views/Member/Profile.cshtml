@model string
@{
    ViewBag.Title = "Detail";
    ViewBag.ngController = "memberProfileController";
    Layout = "~/Views/Shared/_LayoutMember.cshtml";
}
<section ng-init="init('@Model')">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            我的信息
            <small>管理我的信息</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> 首页</a></li>
            @*<li><a href="#">Examples</a></li>*@
            <li class="active">我的信息</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">修改密码</h3>
            </div>
            <div class="box-body ">
                <div class="callout callout-danger" ng-show="changePasswordError!=''">
                    <p>
                        <b>修改失败：</b>{{changePasswordError}}
                    </p>
                </div>
                <div class="callout callout-success" ng-show="changePasswordSuccess!=''">
                    <p>
                        <b>修改成功</b>
                    </p>
                </div>
                <div class="form-group">
                    <label>原密码</label>
                    <input class="form-control" ng-model="changePasswordModel.password" type="password" />
                </div>
                <div class="form-group">
                    <label>新密码</label>
                    <input class="form-control" ng-model="changePasswordModel.newPassword" type="password" />
                </div>
                <div class="form-group">
                    <label>新密码确认</label>
                    <input class="form-control" ng-model="changePasswordModel.confirmPassword" type="password" />
                </div>
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                <button class="btn btn-primary" ng-click="changePassword()">确定修改</button>
            </div>
        </div>
        <!-- /.box -->


        <!-- Default box -->
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">绑定微信</h3>
            </div>
            <div class="box-body ">
                <div class="form-group">
                    <img src="/memberWechat/BindQRCodeSence" />
                </div>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </section>
    <!-- /.content -->
</section>



