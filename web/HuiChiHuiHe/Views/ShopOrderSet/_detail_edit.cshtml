@{
    Layout = null;
}
<div class="box-header box-header-me with-border">

    <h3 class="box-title"><i class="fa fa-edit" ng-dblclick="viewName = 'index'"></i>{{shopOrderSet.currentShop.name}} 订单：{{shopOrderSet.current.flag}} 详细</h3>

    <div class="box-tools pull-left">
        <button type="button" class="btn btn-box-tool" ng-click="viewName = 'index'"><i class="fa fa-times"></i></button>
    </div>
    <!-- /.box-tools -->
</div>
<!-- /.box-header -->
<div class="box-body">
    <div class="callout callout-danger" ng-show="updateError!=''">
        <p>
            <b>更新失败：</b>{{updateError}}
        </p>
    </div>
    <div class="form-group">
        <label>编号</label>
        <div class="form-control">{{shopOrderSet.current.flag}}</div>
    </div>
    <div class="form-group">
        <label>订单内容</label>
        <table class="table colResizable">
            <thead>
                <tr>
                    <th style="width:50px;text-align:center;">序号</th>
                    <th style="width:150px;">商品</th>
                    <th style="width:100px;">规格</th>
                    <th style="width:70px;">金额</th>
                    <th style="width:70px;">数量</th>
                    <th style="width:70px;">总计</th>
                </tr>
            </thead>
            <tr ng-repeat="item in shopOrderSet.currentOrderItems">
                <td style="text-align:center;">{{($index+1)}}</td>
                <td style="text-align:center;">{{item.commodityName}}</td>
                <td style="text-align:center;">{{item.skuSummary}}</td>
                <td style="text-align:center;">{{item.salePrice/100}}</td>
                <td style="text-align:center;">{{item.count}}</td>
                <td style="text-align:center;">{{item.salePrice/100*item.count}}</td>
            </tr>
        </table>
    </div>
    <div class="form-group">
        <label>金额</label>
        <div class="form-control">{{shopOrderSet.current.amount/100}}</div>
    </div>
    <div class="form-group">
        <label>联系电话</label>
        <div class="form-control">{{shopOrderSet.current.phone}}</div>
    </div>
    <div class="form-group">
        <label>备注</label>
        <div class="form-control">{{shopOrderSet.current.remark}}</div>
    </div>
    <div class="form-group">
        <label>状态</label>
        <select class="form-control" ng-model="shopOrderSet.current.status" ng-options="item.value as item.name  for item in statusList"></select>
    </div>
    <div class="form-group">
        <label>添加时间</label>
        <div class="form-control">{{shopOrderSet.current.addTime | date:'yyyy-MM-dd HH:mm'}}</div>
    </div>
</div>
<div class="box-footer">
    <button class="btn btn-primary" ng-click="shopOrderSet.setStatus()">确定保存</button>
</div>
<!-- /.box-body -->
