@model ZRui.Web.CommunityArgsModel
@{
    ViewBag.Title = "商铺订单管理";
    ViewBag.ngController = "shopOrderSetIndexController";
    Layout = "~/Views/Shared/_LayoutMember.cshtml";
}
<section ng-init="init('@Model.CommunityFlag','@Model.AppFlag')">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            订单管理
            <small></small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> 首页</a></li>
            <li class="active">订单</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->

        <div class="row">
            <div class="col-md-3">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">商铺品牌</h3>
                        <div class="box-tools pull-right">
                        </div>
                    </div>
                    <div class="box-body">
                        <table class="table colResizable">
                            <thead>
                                <tr>
                                    <th style="width:70px;text-align:center;">序号</th>
                                    <th style="width:350px;">标题</th>
                                </tr>
                            </thead>
                            <tr>
                                <td style="text-align:center;">---</td>
                                <td><input type="text" class="form-control input-sm" ng-model="shopOrderSet.searchShopBrandsModel.name" ng-change="load()" /></td>
                            </tr>
                            <tr ng-repeat="item in shopOrderSet.shopBrands">
                                <td style="text-align:center;">{{item.id}}</td>
                                <td><a href="javascript:;" ng-click="selectShopBrand(item)">{{item.name}}</a></td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title"><span ng-if="shopOrderSet.currentShopBrand!=null">{{shopOrderSet.currentShopBrand.name}}</span>商铺</h3>
                        <div class="box-tools pull-right">
                        </div>
                    </div>
                    <div class="box-body">
                        <table class="table colResizable">
                            <thead>
                                <tr>
                                    <th style="width:70px;text-align:center;">序号</th>
                                    <th style="width:350px;">标题</th>
                                </tr>
                            </thead>
                            <tr>
                                <td style="text-align:center;">---</td>
                                <td><input type="text" class="form-control input-sm" ng-model="shopOrderSet.searchShopBrandsModel.name" ng-change="load()" /></td>
                            </tr>
                            <tr ng-repeat="item in shopOrderSet.shops">
                                <td style="text-align:center;">{{item.id}}</td>
                                <td><a href="javascript:;" ng-click="selectShop(item)">{{item.name}}</a></td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="box">
                    <div class="box-header with-border">
                        <h3 class="box-title"><span ng-if="shopOrderSet.currentShop!=null">{{shopOrderSet.currentShop.name}}</span>订单管理</h3>
                        <div class="box-tools pull-right">
                            <input type="text" class="form-control pull-right" ng-change="shopOrderSet.load()" placeholder="行数" ng-model="shopOrderSet.pageSize" title="行数" style="width:45px;">
                        </div>
                    </div>
                    <div class="box-body table-responsive no-padding">
                        <table class="table colResizable">
                            <thead>
                                <tr>
                                    <th style="width:50px;text-align:center;">序号</th>
                                    <th style="width:150px;">编号</th>
                                    <th style="width:100px;">下单时间</th>
                                    <th style="width:70px;">金额</th>
                                    <th style="width:100px;">联系电话</th>
                                    <th style="width:70px;">状态</th>
                                    <th style="width:70px;text-align:center;">删除</th>
                                </tr>
                            </thead>
                            <tr>
                                <td style="text-align:center;">---</td>
                                <td style="text-align:center;">---</td>
                                <td style="text-align:center;">---</td>
                                <td style="text-align:center;">---</td>
                                <td style="text-align:center;">---</td>
                                <td style="text-align:center;">---</td>
                                <td style="text-align:center;">---</td>
                                <td style="text-align:center;">---</td>
                            </tr>
                            <tr ng-repeat="item in shopOrderSet.items">
                                <td style="text-align:center;">{{($index+1)}}</td>
                                <td><a href="javascript:;" ng-click="edit(item)">{{item.flag}}</a></td>
                                <td style="text-align:center;">{{item.addTime | date:'yyyy-MM-dd HH:mm'}}</td>
                                <td style="text-align:center;">{{item.amount/100}}</td>
                                <td style="text-align:center;">{{item.phone}}</td>
                                <td>{{item.status | shopOrderStatus}}</td>
                                <td style="text-align:center;"><a href="javascript:;" data-fn-delete="shopOrderSet.setIsDelete(item)" delete-confirm="确定移除'{{item.name}}'?"><i class="fa fa-remove"></i></a></td>
                            </tr>
                        </table>
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer">
                    </div>
                </div>
            </div>
            <!-- /.box -->

        </div>

    </section>
    <!-- /.content -->
</section>
@section detailView{
    <div class="box box-primary" ng-show="viewName=='edit'">
        @{await Html.RenderPartialAsync("_detail_edit");}
    </div>
}
@section scripts{
    <script src="~/js/app/shopOrderSet/index.js"></script>
}

@section head{

}