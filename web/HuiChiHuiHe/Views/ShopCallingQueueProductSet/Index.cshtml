@model ZRui.Web.CommunityArgsModel
@{
    ViewBag.Title = "商铺叫号设置";
    ViewBag.ngController = "shopCallingQueueProductSetIndexController";
    Layout = "~/Views/Shared/_LayoutMember.cshtml";
}
<section ng-init="init('@Model.CommunityFlag','@Model.AppFlag')">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            叫号设置
            <small></small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> 首页</a></li>
            <li class="active">叫号设置</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->

        <div class="row">
            <div class="col-md-3">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">商铺品牌</h3>
                        <div class="box-tools pull-right">
                        </div>
                    </div>
                    <div class="box-body">
                        <table class="table colResizable">
                            <thead>
                                <tr>
                                    <th style="width:70px;text-align:center;">序号</th>
                                    <th style="width:350px;">标题</th>
                                </tr>
                            </thead>
                            <tr>
                                <td style="text-align:center;">---</td>
                                <td><input type="text" class="form-control input-sm" ng-model="shopCallingQueueProductSet.searchShopBrandsModel.name" ng-change="load()" /></td>
                            </tr>
                            <tr ng-repeat="item in shopCallingQueueProductSet.shopBrands">
                                <td style="text-align:center;">{{item.id}}</td>
                                <td><a href="javascript:;" ng-click="selectShopBrand(item)">{{item.name}}</a></td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title"><span ng-if="shopCallingQueueProductSet.currentShopBrand!=null">{{shopCallingQueueProductSet.currentShopBrand.name}}</span>商铺</h3>
                        <div class="box-tools pull-right">
                        </div>
                    </div>
                    <div class="box-body">
                        <table class="table colResizable">
                            <thead>
                                <tr>
                                    <th style="width:70px;text-align:center;">序号</th>
                                    <th style="width:350px;">标题</th>
                                </tr>
                            </thead>
                            <tr>
                                <td style="text-align:center;">---</td>
                                <td><input type="text" class="form-control input-sm" ng-model="shopCallingQueueProductSet.searchShopBrandsModel.name" ng-change="load()" /></td>
                            </tr>
                            <tr ng-repeat="item in shopCallingQueueProductSet.shops">
                                <td style="text-align:center;">{{item.id}}</td>
                                <td><a href="javascript:;" ng-click="selectShop(item)">{{item.name}}</a></td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="box">
                    <div class="box-header with-border">
                        <h3 class="box-title"><span ng-if="shopCallingQueueProductSet.currentShop!=null">{{shopCallingQueueProductSet.currentShop.name}}</span>叫号设定</h3>
                        <a class="btn btn-link btn-sm" ng-click="initAdd()"><i class="fa fa-plus"></i></a>
                        开启叫号
                        <label class="switch">
                            <input type="checkbox" ng-model="shopCallingQueueProductSet.currentShop.openStatus" ng-click="shopCallingQueueProductSet.setCurrentShopOpenStatus()">
                            <span class="check"></span>
                        </label>
                        <div class="box-tools pull-right">
                            <input type="text" class="form-control pull-right" ng-change="shopCallingQueueProductSet.load()" placeholder="行数" ng-model="shopCallingQueueProductSet.pageSize" title="行数" style="width:45px;">
                        </div>
                    </div>
                    <div class="box-body table-responsive no-padding">
                        <table class="table colResizable">
                            <thead>
                                <tr>
                                    <th style="width:70px;text-align:center;">序号</th>
                                    <th style="width:250px;">标题</th>
                                    <th style="width:70px;">状态</th>
                                    <th style="width:70px;text-align:center;">删除</th>
                                </tr>
                            </thead>
                            <tr>
                                <td style="text-align:center;">---</td>
                                <td><input type="text" class="form-control input-sm" ng-model="shopCallingQueueProductSet.searchModel.name" ng-change="load()" /></td>
                                <td style="text-align:center;">---</td>

                                <td style="text-align:center;">---</td>
                            </tr>
                            <tr ng-repeat="item in shopCallingQueueProductSet.items">
                                <td style="text-align:center;">{{($index+1)}}</td>
                                <td><a href="javascript:;" ng-click="edit(item)">{{item.title}}</a></td>
                                <td>{{item.status | shopCallingQueueProductStatus}}</td>

                                <td style="text-align:center;"><a href="javascript:;" data-fn-delete="shopCallingQueueProductSet.setIsDelete(item)" delete-confirm="确定移除'{{item.name}}'?"><i class="fa fa-remove"></i></a></td>
                            </tr>
                        </table>
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer">
                    </div>
                </div>
            </div>
            <!-- /.box -->

        </div>

    </section>
    <!-- /.content -->
</section>
@section detailView{
    <div class="box box-success" ng-show="viewName=='add'">
        @{await Html.RenderPartialAsync("_detail_add");}
    </div>


    <div class="box box-primary" ng-show="viewName=='edit'">
        @{await Html.RenderPartialAsync("_detail_edit");}
    </div>
}
@section scripts{
    <script src="~/js/app/shopCallingQueueProductSet/index.js"></script>
}

@section head{

}