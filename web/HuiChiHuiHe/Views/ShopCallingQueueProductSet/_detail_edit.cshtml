@{
    Layout = null;
}
<div class="box-header box-header-me with-border">

    <h3 class="box-title"><i class="fa fa-edit" ng-dblclick="viewName = 'index'"></i>{{shopCallingQueueProductSet.currentShop.name}} 叫号设定：{{shopCallingQueueProductSet.current.title}} 详细</h3>

    <div class="box-tools pull-left">
        <button type="button" class="btn btn-box-tool" ng-click="viewName = 'index'"><i class="fa fa-times"></i></button>
    </div>
    <!-- /.box-tools -->
</div>
<!-- /.box-header -->
<div class="box-body">
    <div class="callout callout-danger" ng-show="updateError!=''">
        <p>
            <b>更新失败：</b>{{updateError}}
        </p>
    </div>
    <div class="form-group">
        <label>标题</label>
        <input class="form-control" ng-model="shopCallingQueueProductSet.current.title" type="text" />
    </div>
    <div class="form-group">
        <label>说明</label>
        <input class="form-control" ng-model="shopCallingQueueProductSet.current.detail" type="text" />
    </div>
    <div class="form-group">
        <label>状态</label>
        <select class="form-control" ng-model="shopCallingQueueProductSet.current.status" ng-options="item.value as item.name  for item in statusList"></select>
    </div>
</div>
<div class="box-footer">
    <button class="btn btn-primary" ng-click="shopCallingQueueProductSet.update()">确定添加</button>
</div>
<!-- /.box-body -->
