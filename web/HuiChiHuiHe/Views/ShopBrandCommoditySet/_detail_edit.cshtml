@{
    Layout = null;
}
<div class="box-header box-header-me with-border">

    <h3 class="box-title"><i class="fa fa-edit" ng-dblclick="viewName = 'index'"></i> 商品：{{shopBrandCommoditySet.current.name}} 详细</h3>

    <div class="box-tools pull-left">
        <button type="button" class="btn btn-box-tool" ng-click="viewName = 'index'"><i class="fa fa-times"></i></button>
    </div>
    <!-- /.box-tools -->
</div>
<!-- /.box-header -->
<div class="box-body">
    <div class="callout callout-danger" ng-show="updateError!=''">
        <p>
            <b>更新失败：</b>{{updateError}}
        </p>
    </div>
    <ul class="nav nav-tabs">
        <li class="active"><a href="#basic" data-toggle="tab">基本</a></li>
        <li><a href="#parameter" data-toggle="tab">规格</a></li>
    </ul>
    <div class="tab-content">
        <div class="active tab-pane" id="basic">
            <div class="form-group">
                <label>类别</label>
                <div>
                    <span ng-if="shopBrandCommoditySet.current.categoryId">{{shopBrandCommoditySet.current.categoryName}}  </span>
                    <span ng-if="!shopBrandCommoditySet.current.categoryId">根  </span>
                    <a class="btn btn-link" ng-click="showChangeCategoryDialog('dialog_change_category','update')">重新选择</a>
                </div>
            </div>
            <div class="form-group">
                <label>标识</label>
                <div class="form-control">{{shopBrandCommoditySet.current.flag}}</div>
            </div>
            <div class="form-group">
                <label>名称</label>
                <input class="form-control" ng-model="shopBrandCommoditySet.current.name" type="text" />
            </div>
            <div class="form-group">
                <label>市场价</label>
                <input class="form-control" ng-model="shopBrandCommoditySet.current.price" type="text" />
            </div>
            <div class="form-group">
                <label>计量单位</label>
                <input class="form-control" ng-model="shopBrandCommoditySet.current.unit" type="text" />
            </div>
            <div class="form-group">
                <label>简介</label>
                <input class="form-control" ng-model="shopBrandCommoditySet.current.summary" type="text" />
            </div>
            <div class="form-group">
                <label>详细</label>
                <input class="form-control" ng-model="shopBrandCommoditySet.current.detail" type="text" />
            </div>
            <div class="form-group">
                <label>月销量</label>
                <input class="form-control" ng-model="shopBrandCommoditySet.current.salesForMonth" type="text" />
            </div>
            <div class="form-group">
                <label>点赞数</label>
                <input class="form-control" ng-model="shopBrandCommoditySet.current.upvote" type="text" />
            </div>
            <div class="form-group">
                <label>是否推荐</label>
                <div class="form-control">
                    <input ng-model="shopBrandCommoditySet.current.isRecommand" type="checkbox" />推荐
                </div>
            </div>
            <div class="form-group">
                <label>封面</label>
                <input class="form-control" ng-model="shopBrandCommoditySet.current.cover" type="text" />
            </div>
            <div class="form-group">
                <button class="btn btn-primary" ng-click="shopBrandCommoditySet.update()">保存</button>
            </div>
        </div>
        <div class="tab-pane" id="parameter">
            <div class="form-group">
                <label>添加规格</label>
                <select class="form-control" ng-model="shopBrandCommoditySkuSet.addModel.parameterId" ng-options="item.id as item.name for item in shopBrandCommoditySkuSet.currentParameters"></select>
            </div>
            <div class="form-group">
                <button class="btn btn-primary" ng-click="shopBrandCommoditySkuSet.add()">添加</button>
            </div>
            <hr />
            <table class="table colResizable">
                <thead>
                    <tr>
                        <th style="width:70px;text-align:center;">序号</th>
                        <th style="width:150px;">规格名称</th>
                        <th>可选值</th>
                        <th style="width:70px;text-align:center;">删除</th>
                    </tr>
                </thead>
                <tr ng-repeat="item in shopBrandCommoditySkuSet.skuParameters">
                    <td style="text-align:center;">{{($index+1)}}</td>
                    <td>{{item.name}}</td>
                    <td><span class="label label-default" ng-repeat="valueItem in item.values" style="margin-right:1em;">{{valueItem.value}}</span></td>
                    <td style="text-align:center;"><a href="javascript:;" data-fn-delete="shopBrandCommoditySkuSet.remove(item.id)" delete-confirm="确定移除?"><i class="fa fa-remove"></i></a></td>
                </tr>
            </table>
        </div>
    </div>

</div>
<!-- /.box-body -->
