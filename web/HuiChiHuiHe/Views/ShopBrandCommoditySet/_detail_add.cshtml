@{
    Layout = null;
}
<div class="box-header box-header-me with-border">

    <h3 class="box-title"><i class="fa fa-plus" ng-dblclick="viewName = 'index'"></i> 添加</h3>

    <div class="box-tools pull-left">
        <button type="button" class="btn btn-box-tool" ng-click="viewName = 'index'"><i class="fa fa-times"></i></button>
    </div>
    <!-- /.box-tools -->
</div>
<!-- /.box-header -->
<div class="box-body">
    <div class="callout callout-danger" ng-show="addError!=''">
        <p>
            <b>添加失败：</b>{{addError}}
        </p>
    </div>
    <div class="form-group">
        <label>类别</label>
        <div>
            <span ng-if="shopBrandCommoditySet.newModel.categoryId">{{shopBrandCommoditySet.newModel.categoryName}}  </span>
            <span ng-if="!shopBrandCommoditySet.newModel.categoryId">未选择  </span>
            <a class="btn btn-link" ng-click="showChangeCategoryDialog('dialog_change_category','add')">重新选择</a>
        </div>
    </div>
    <div class="form-group">
        <label>所属商铺品牌</label>
        <div class="form-control">{{shopBrandCommoditySet.currentShopBrand.name}}</div>
    </div>
    <div class="form-group">
        <label>名称</label>
        <input class="form-control" ng-model="shopBrandCommoditySet.newModel.name" type="text" />
    </div>
</div>
<div class="box-footer">
    <button class="btn btn-primary" ng-click="shopBrandCommoditySet.add()">确定添加</button>
</div>
<!-- /.box-body -->