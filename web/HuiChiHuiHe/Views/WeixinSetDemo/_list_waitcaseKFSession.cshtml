@{ Layout = null; }
<!-- Default box -->
<div class="box">
    <div class="box-header with-border">
        <h3 class="box-title">客服-未接入会话列表</h3>
        <a class="btn btn-link btn-sm" ng-click="getWaitcaseKFSession()"><i class="fa fa-refresh"></i></a>
        <div class="box-tools pull-right">
            当前客服：
            
            <select ng-options="item as item.kf_nick for item in kfList" ng-model="currentKF"></select>
        </div>
    </div>
    <div class="box-body table-responsive no-padding">
        <table class="table colResizable">
            <thead>
                <tr>
                    <th style="width:70px;text-align:center;">序号</th>
                    <th>openid</th>
                    <th>kf_account</th>
                    <th>createtime</th>
                    <th>接入</th>
                </tr>
            </thead>
            <tr ng-repeat="item in waitcaseKFSession.waitcaselist">
                <td style="text-align:center;">{{($index+1)}}</td>
                <td><a href="javascript:;" ng-click="initUpdateKFAccount(item)">{{item.openid}}</a></td>
                <td>{{item.kf_account}}</td>
                <td>{{item.createtime}}</td>
                <td style="text-align:center;"><a href="javascript:;" ng-click="createKFSession(item)">接入</a></td>
            </tr>
        </table>
    </div>
    <!-- /.box-body -->
    <div class="box-footer">
    </div>
</div>
<!-- /.box -->