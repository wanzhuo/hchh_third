@{ Layout = null; }

<div class="box box-success" ng-show="viewName=='send'">
    <div class="box-header box-header-me with-border">

        <h3 class="box-title"><i class="fa fa-plus" ng-dblclick="viewName = 'index'"></i> 发送消息</h3>

        <div class="box-tools pull-left">
            <button type="button" class="btn btn-box-tool" ng-click="viewName = 'index'"><i class="fa fa-times"></i></button>
        </div>
        <!-- /.box-tools -->
    </div>
    <!-- /.box-header -->
    <div class="box-body">
        <div class="form-group">
            <label>kfAccount</label>
            <input class="form-control" ng-model="sendModel.openid" type="text" />
        </div>
        <div class="form-group">
            <label>nickname</label>
            <select ng-options="item.kf_account as item.kf_nick for item in kfList" ng-model="sendModel.kfaccount"></select>
        </div>
        <div class="form-group">
            <label>kfAccount</label>
            <input class="form-control" ng-model="sendModel.text" type="text" />
        </div>
    </div>
    <div class="box-footer">
        <button class="btn btn-primary" ng-click="sendText()">确定</button>
    </div>
    <!-- /.box-body -->
</div>
