@{
    Layout = null;
}

<div class="box box-success" ng-show="viewName=='inviteKFWorker'">
    <div class="box-header box-header-me with-border">

        <h3 class="box-title"><i class="fa fa-plus" ng-dblclick="viewName = 'index'"></i> 邀请绑定</h3>

        <div class="box-tools pull-left">
            <button type="button" class="btn btn-box-tool" ng-click="viewName = 'index'"><i class="fa fa-times"></i></button>
        </div>
        <!-- /.box-tools -->
    </div>
    <!-- /.box-header -->
    <div class="box-body">
        <div class="form-group">
            <label>kfAccount</label>
            <input class="form-control" ng-model="inviteKFWorkerModel.kfAccount" type="email" />
        </div>
        <div class="form-group">
            <label>客服微信号</label>
            <input class="form-control" ng-model="inviteKFWorkerModel.inviteWx" type="text" />
        </div>
    </div>
    <div class="box-footer">
        <button class="btn btn-primary" ng-click="inviteKFWorker()">邀请</button>
    </div>
    <!-- /.box-body -->
</div>

<!-- /.inviteKFWorker -->