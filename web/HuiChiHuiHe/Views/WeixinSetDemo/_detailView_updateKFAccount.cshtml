@{
    Layout = null;
}

<div class="box box-success" ng-show="viewName=='updateKFAccount'">
    <div class="box-header box-header-me with-border">

        <h3 class="box-title"><i class="fa fa-plus" ng-dblclick="viewName = 'index'"></i> 更新客服</h3>

        <div class="box-tools pull-left">
            <button type="button" class="btn btn-box-tool" ng-click="viewName = 'index'"><i class="fa fa-times"></i></button>
        </div>
        <!-- /.box-tools -->
    </div>
    <!-- /.box-header -->
    <div class="box-body">
        <div class="form-group">
            <label>kfAccount</label>
            <input class="form-control" ng-model="updateKFAccountModel.kfAccount" type="email" />
        </div>
        <div class="form-group">
            <label>nickname</label>
            <input class="form-control" ng-model="updateKFAccountModel.nickname" type="text" />
        </div>
    </div>
    <div class="box-footer">
        <button class="btn btn-primary" ng-click="updateKFAccount()">确定</button>
    </div>
    <!-- /.box-body -->
</div>
<!-- /.updateKFAccount -->