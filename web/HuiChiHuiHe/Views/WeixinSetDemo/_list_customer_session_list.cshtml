@{ Layout = null; }
<!-- Default box -->
<div class="box">
    <div class="box-header with-border">
        <h3 class="box-title">接入列表</h3>
        <a class="btn btn-link btn-sm" ng-click="getCustomerSessionList()"><i class="fa fa-refresh"></i></a>
        <div class="box-tools pull-right">
        </div>
    </div>
    <div class="box-body table-responsive no-padding">
        <table class="table colResizable">
            <thead>
                <tr>
                    <th style="width:70px;text-align:center;">序号</th>
                    <th>openId</th>
                    <th>time</th>
                    <th>worker</th>
                    <th>status</th>
                </tr>
            </thead>
            <tr ng-repeat="item in customerSessionList ">
                <td style="text-align:center;">{{item.id}}</td>
                <td><a href="javascript:;" ng-click="editCustomerSession(item)">{{item.openId}}</a></td>
                <td>{{item.time}}</td>
                <td>{{item.worker}}</td>
                <td>{{item.status | customerSessionStatus}}</td>
            </tr>
        </table>
    </div>
    <!-- /.box-body -->
    <div class="box-footer">
    </div>
</div>
<!-- /.box -->